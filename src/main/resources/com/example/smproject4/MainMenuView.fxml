<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="410.0" prefWidth="480.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.smproject4.MainMenuController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Pane prefHeight="400.0" prefWidth="440.0">
      <children>
         <Button fx:id="specialtyButton" layoutX="31.0" layoutY="29.0" mnemonicParsing="false" onAction="#onOrderSpecialityClick">
          <graphic>
              <VBox alignment="CENTER">
              <ImageView fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                      <Image url="@../../../orderSpecialty.jpg" />
                  </image>
              </ImageView>
                  <Label text="Order Specialty Pizzas" />
              </VBox>
          </graphic>
          </Button>
         <Button fx:id="buildYourOwnPizzaButton" layoutX="246.0" layoutY="129.0" mnemonicParsing="false" onAction="#onBuildYourOwnClick">
             <graphic>
            <VBox alignment="CENTER">
              <ImageView fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                      <Image url="@../../../customImage.png" />
                  </image>
              </ImageView>
              <Label text="Build Your Own Pizza" />
          </VBox>
        </graphic>
         </Button>
         <Button fx:id="currentOrderButton" layoutX="46.0" layoutY="307.0" mnemonicParsing="false" onAction="#onCurrentOrderClick" text="Current Order" />
         <Button fx:id="storeOrdersButton" layoutX="310.0" layoutY="307.0" mnemonicParsing="false" onAction="#onStoreOrdersClick" text="Store Orders" />
      </children>
   </Pane>

    <Label fx:id="welcomeText" />
</VBox>
